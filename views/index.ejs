<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee Payroll System</title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="container">
    <header class="header">
      <h1 class="title">
        <span class="icon">ðŸ’¼</span>
        Employee Payroll System
      </h1>
      <a href="/add" class="btn btn-primary">
        <span>+</span> Add Employee
      </a>
    </header>

    <div class="card">
      <% if (employees.length === 0) { %>
        <div class="empty-state">
          <div class="empty-icon">ðŸ“‹</div>
          <h2>No Employees Yet</h2>
          <p>Get started by adding your first employee</p>
          <a href="/add" class="btn btn-primary">Add Employee</a>
        </div>
      <% } else { %>
        <div class="table-container">
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Position</th>
                <th>Basic Salary</th>
                <th>Tax (12%)</th>
                <th>Net Salary</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% employees.forEach(employee => { %>
                <% const tax = employee.basicSalary * 0.12; %>
                <% const netSalary = employee.basicSalary - tax; %>
                <tr>
                  <td><span class="badge"><%= employee.id %></span></td>
                  <td class="employee-name"><%= employee.name %></td>
                  <td><%= employee.position %></td>
                  <td class="salary">â‚¹<%= employee.basicSalary.toLocaleString() %></td>
                  <td class="tax">â‚¹<%= tax.toLocaleString() %></td>
                  <td class="net-salary">â‚¹<%= netSalary.toLocaleString() %></td>
                  <td class="actions">
                    <a href="/edit/<%= employee.id %>" class="btn btn-secondary btn-sm">Edit</a>
                    <a href="/delete/<%= employee.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this employee?')">Delete</a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
