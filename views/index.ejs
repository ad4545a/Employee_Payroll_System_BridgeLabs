<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee Payroll System</title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
</head>

<body>
  <div class="container">
    <header class="main-header">
      <h1>EPS</h1>
      <p>Employee Payroll System</p>
    </header>

    <div class="stats-container">
      <div class="stat-card">
        <div class="stat-value">
          <%= totalEmployees %>
        </div>
        <div class="stat-label">Total Employees</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">
          <%= totalDepartments %>
        </div>
        <div class="stat-label">Departments</div>
      </div>

      <div class="stat-card">
        <div class="stat-value">
          ₹<%= totalTax.toLocaleString() %>
        </div>
        <div class="stat-label">Total Tax</div>
      </div>

      <div class="stat-card">
        <div class="stat-value">
          ₹<%= totalnetSalary.toLocaleString() %>
        </div>
        <div class="stat-label">Total Net Salary</div>
      </div>
    </div>

    <div class="card">
      <div class="card-header">
        <h2>Employees</h2>
        <a href="/add" class="btn btn-primary">+ Add Employee</a>
      </div>

      <% if (employees.length===0) { %>
        <div class="empty-state">
          <h2>No Employees Yet</h2>
          <p>Get started by adding your first employee.</p>
          <a href="/add" class="btn btn-primary">Add Employee</a>
        </div>
        <% } else { %>
          <div class="table-container">
            <table>
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Department</th>
                  <th>Basic Salary</th>
                  <th>Tax (12%)</th>
                  <th>Net Salary</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% employees.forEach(emp=> {
                  const tax = emp.basicSalary * 0.12;
                  const net = emp.basicSalary - tax;
                  %>
                  <tr>
                    <td><span class="badge-id">#<%= emp.id %></span></td>
                    <td>
                      <%= emp.name %>
                    </td>
                    <td>
                      <%= emp.position %>
                    </td>
                    <td>₹<%= emp.basicSalary.toLocaleString() %>
                    </td>
                    <td class="text-danger">₹<%= tax.toLocaleString() %>
                    </td>
                    <td class="text-success">₹<%= net.toLocaleString() %>
                    </td>
                    <td>
                      <a href="/edit/<%= emp.id %>" class="btn btn-sm btn-secondary">Edit</a>
                      <a href="/delete/<%= emp.id %>" class="btn btn-sm btn-danger"
                        onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
          <% } %>
    </div>
  </div>
</body>

</html>